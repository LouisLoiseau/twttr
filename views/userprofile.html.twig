{% extends 'layout.html.twig' %}
{% block assets %}
<script src="/assets/js/follow.js"></script>
<script src="/assets/js/actions.js"></script>
{% endblock %}
{% block page_title %}Twttr | Profile{% endblock %}
{% block content %}
<div class="row">
    <div class="col-2">
        <div class="img-wrapper d-flex justify-content-center align-items-center">        
        {% if userProfile.pp_url is not empty %}
            <img data-toggle="modal" data-target="#editProfilePic" src="{{ userProfile.pp_url }}" class="pp mr-3 ml-3">
        {% else %}
            <img data-toggle="modal" data-target="#editProfilePic" src="/assets/pp/default_pp.png" class="pp mr-3 ml-3">
        {% endif %}
            <div class="img-desc">
                <i class="fas fa-pencil-alt fa-lg"></i>                
            </div>
        </div>
    </div>
    <div class="col-4 d-flex flex-column justify-content-center">
        <h4>{{ userProfile.name }}&nbsp;<small><a href="">@{{ userProfile.name }}</small></a></h4>
        <h4>{{ userProfile.email }}</h4>
    </div>
    <div class="col-2 d-flex justify-content-center align-items-center">
        <form action="/{% if userProfile.is_followed_by == true %}unfollow{% else %}follow{% endif %}" method="POST" name="follow">
            <button type="submit" 
                data-followed="{{ userProfile.id }}"
                data-follower="{{ user.id }}"
                class="btn btn-primary btn-round-lg {% if user.name is not defined %}btn-disabled disabled{% endif %}"
                {% if user.name is not defined %} disabled {% endif %}
                name="follow"
                data-already-followed="{{ userProfile.is_followed_by }}">{% if userProfile.is_followed_by == true %}Followed{% else %}Follow{% endif %}</button>            
        </form>
    </div>
    <div class="col-4 d-flex flex-column justify-content-center">
        <h5 name="user-following">Following: {{ userProfile.followings }} </h5>
        <h5 name="user-followers">Followers: {{ userProfile.followers }}</h5>
    </div>
</div>
<div class="row">
    <div class="col-3"></div>
    <div class="col-md-6">
        <table class="table col-md-6 mt-5" id="twtts">
            {% for twtt in twtts %}
            <tr class="">
                <td class="col-md-6">
                    <div class="media pr-4 pl-4 pt-4 pb-3">
                        {% if twtt.pp_url is not empty %}
                            <img src="{{ twtt.pp_url }}" alt="{{ twtt.author_name}} profile picture" class="align-self-start twtt-thumbnail mr-3 ml-3">
                        {% else %}
                            <img src="/assets/pp/default_pp.png" alt="PP-Pro" class="align-self-start twtt-thumbnail mr-3 ml-3">
                        {% endif %}
                        <div class="media-body">
                            <h5 class="mt-0 d-flex justify-content-between">{{ twtt.author_name }}<span>{{ twtt.date|date("d/m/Y H:i") }}</span></h5>
                            <p>{{twtt.content|nl2br}}</p>
                            <div class="media-footer d-flex justify-content-center">
                                <div class="actions d-flex justify-content-around">
                                    <div class="rtwtt {% if twtt.rtwtted == true %}text-success{% endif %}" data-twtt={{ twtt.id }}><span class="rt-nbr">{{ twtt.rtwtts }}</span><i class="fas fa-retweet"></i></div>
                                    <div class="fav {% if twtt.faved == true %}text-warning{% endif %}" data-twtt={{ twtt.id }}><span class="fav-nbr">{{ twtt.favs }}</span><i class="fas fa-star"></i></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
            {% endfor %}
        </table>
    </div>
    <div class="col-3"></div>
</div>
{% endblock %}