{% extends 'layout.html.twig' %}
{% block assets %}
<script src="/assets/js/follow.js"></script>
<script src="/assets/js/actions.js"></script>
{% endblock %}
{% block page_title %}Twttr | Profile{% endblock %}
{% block content %}
<div class="row">
    <div class="col-2">
        <div class="img-wrapper d-flex justify-content-center align-items-center">        
        {% if userProfile.pp_url is not empty %}
            <img data-toggle="modal" data-target="#editProfilePic" src="{{ userProfile.pp_url }}" class="pp mr-3 ml-3" alt="{{ user.name }} profile picture">
        {% else %}
            <img data-toggle="modal" data-target="#editProfilePic" src="/assets/pp/default_pp.png" class="pp mr-3 ml-3" alt="Default profile picture">
        {% endif %}
        </div>
    </div>
    <div class="col-4 d-flex flex-column justify-content-center">
        <h4>{{ userProfile.name }}&nbsp;<small><a href="">@{{ userProfile.name }}</a></small></h4>
        <h4>{{ userProfile.email }}</h4>
    </div>
    <div class="col-2 d-flex justify-content-center align-items-center">
        <form action="/{% if userProfile.is_followed_by == true %}unfollow{% else %}follow{% endif %}" method="POST" name="follow">
            <button type="submit" 
                data-followed="{{ userProfile.id }}"
                data-follower="{{ user.id }}"
                class="btn btn-primary btn-round-lg {% if user.name is not defined %}btn-disabled disabled{% endif %}"
                {% if user.name is not defined %} disabled {% endif %}
                name="follow"
                data-already-followed="{{ userProfile.is_followed_by }}">{% if userProfile.is_followed_by == true %}Followed{% else %}Follow{% endif %}</button>            
        </form>
    </div>
    <div class="col-4 d-flex flex-column justify-content-center">
        <h5 id="user-following">Following: {{ userProfile.followings }} </h5>
        <h5 id="user-followers">Followers: {{ userProfile.followers }}</h5>
    </div>
</div>
<div class="row">
    <div class="col-3"></div>
    <div class="col-md-6">
        <table class="table col-md-6 mt-5" id="twtts">
            {% include 'twtts.html.twig' %}
        </table>
    </div>
    <div class="col-3"></div>
</div>
{% endblock %}