{% extends 'layout.html.twig' %}
{% block page_title %}Twttr | Register{% endblock %}
{% block assets %}
<script src="/assets/js/forms.js"></script>
{% endblock %}

{% block content %}
<form action="/register" class="register-form" name="register-form">
    <fieldset>
        <div class="form-row justify-content-center">
            <div class="form-group col-md-3">
                <legend>Register</legend>
            </div>
        </div>
        <div class="form-row justify-content-center">
            <div class="form-group col-md-3">
                <label for="username">Username</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Username">
                <div class="invalid-feedback ml-5 register-errors" id="register-username-error"></div>
            </div>
        </div>
        <div class="form-row justify-content-center">
            <div class="form-group col-md-3">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Email">
                <div class="invalid-feedback ml-5 register-errors" id="register-email-error"></div>
            </div>
        </div>
        <div class="form-row justify-content-center">
            <div class="form-group col-md-3">
                <label for="username">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                <div class="invalid-feedback ml-5 register-errors" id="register-password-error"></div>
            </div>
        </div>
        <div class="form-row justify-content-center">
            <div class="form-group col-md-3">
                <label for="password-repeat">Confirm password</label>
                <input type="password" class="form-control" id="password-repeat" name="password-repeat" placeholder="Confirm password">
                <div class="invalid-feedback ml-5 register-errors" id="register-password-repeat-error"></div>
            </div>
        </div>
        <div class="form-row justify-content-center">
            <button type="submit" class="btn btn-primary">Sign up</button>
        </div>
    </fieldset>
</form>
{% endblock %}